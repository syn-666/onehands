.top {
  background: #3CB371;
  width: 100%;
  height: 45vh;
  padding-top: 50rpx;
}
.top .userInfo {
  display: flex;
  vertical-align: bottom;
}
.top .userInfo .avatar {
  margin: 0 70rpx;
}
.top .userInfo .avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.top .userInfo .user {
  padding-top: 30rpx;
  justify-content: center;
  align-items: center;
}
.top .userInfo .user .username {
  color: #fff;
  font-size: 25rpx;
}
.top .userInfo .user .id {
  margin-top: 10rpx;
  font-size: 20rpx;
}
.top .account {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 60rpx;
}
.top .account .yu_e {
  display: flex;
  width: 80vw;
  height: 7vh;
  border: 6rpx solid #fff;
  background-color: #fff;
  border-radius: 10rpx;
  vertical-align: bottom;
  align-items: center;
}
.top .account .yu_e .icon {
  display: flex;
  padding: 0rpx 30rpx;
}
.top .account .yu_e .icon .iconfont {
  color: var(--themeColor);
  text-align: center;
  font-size: 35rpx;
  padding-right: 10rpx;
}
.top .account .yu_e .money {
  color: var(--themeColor);
  font-size: 35rpx;
}
.middle {
  position: absolute;
  top: 35%;
  left: 10%;
}
.middle .services {
  border: 1rpx solid #fff;
  border-radius: 10rpx;
  background-color: #fff;
}
.middle .services .help {
  margin: 10rpx 20rpx;
  font-weight: 600;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #ccc;
}
.middle .services .content {
  display: flex;
  display: inline-flex;
  flex-direction: column;
  width: 80vw;
}
.middle .services .content .row {
  display: flex;
  display: inline-flex;
  flex-direction: row;
  padding: 20rpx 0;
}
.middle .services .content .row .item {
  flex: 1;
}
.middle .services .content .row .item image {
  width: 150rpx;
  height: 150rpx;
}
